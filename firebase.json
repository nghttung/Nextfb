{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "function": "serverapp"
      }
    ]
  },
  "functions": {
    "predeploy": "yarn build",
    "source": ".",
    "ignore": [
      ".firebase/**",
      ".firebaserc",
      "firebase.json",
      "**/node_modules/**",
      "**/public/**"
    ]
  }
}
